<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0px"
    app:cardMaxElevation="2px"
    app:cardUseCompatPadding="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.story.culture.views.RoundAngleImageView
                android:id="@+id/img"
                android:layout_width="120dip"
                android:layout_height="80dip"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                android:background="@drawable/drawable_guitar_bg"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                app:roundHeight1="10dp"
                app:roundWidth1="10dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/img"
                android:text="吉他教程"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/name"
                android:layout_below="@id/name"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img"
                android:text="授课老师：杨夏洁"
                android:textColor="#e6e6e6"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pay_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/name"
                android:layout_below="@id/teacher"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img"
                android:text="缴纳学费 ：980元"
                android:textColor="#e6e6e6"
                android:textSize="15sp" />

    <!--        <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="课时"
                android:textColor="#e6e6e6"
                android:textSize="15sp" />-->

            <TextView
                android:id="@+id/memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/img"
                android:layout_below="@id/img"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/time"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="备忘录备忘录备忘录备忘录备忘录备忘录备忘录备忘录备忘录备忘录备忘录备忘录备忘录备忘录备忘录备忘录备忘录备忘录备忘录备忘录备忘录备忘录备忘录备忘录备忘录"
                android:textColor="#e6e6e6"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:background="#88000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          />
        <ImageView
            android:id="@+id/finish"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/drawable_finish"
            android:layout_gravity="top|right"/>
    </FrameLayout>
</android.support.v7.widget.CardView>
